@model IEnumerable<Fortune_Teller_MVC.Models.Customer>

@{
    ViewBag.Title = "Gypsey's Source";
}

<h2>Customers</h2>

<p class="alert">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Given Name
        </th>
        <th>
            Family Name
        </th>
        <th>
            Age
        </th>
        <th>
            Number of Blood-Related Siblings
        </th>
        <th>
            Horoscope Month
        </th>
        <th>
            Favorite Energy Color<br/>Gypsy's Choice
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfSiblings)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BirthMonth1.BirthMonthName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ColorID1.ColorName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CustomerID }) |
            @Html.ActionLink("Details", "Details", new { id=item.CustomerID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CustomerID })
        </td>
    </tr>
}

</table>
